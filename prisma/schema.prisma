generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  eventId   String    @id @default(uuid())
  eventName String
  memo      String
  fromDate  DateTime
  toDate    DateTime
  moneyUnit String
  members   Member[]
  payments  Payment[]
}

model Member {
  id       Int    @id @default(autoincrement())
  memberId String @default(uuid())
  name     String
  ratio    Int
  eventId  String
  event    Event  @relation(fields: [eventId], references: [eventId])
}

model Payment {
  paymentId String    @id @default(uuid())
  eventId   String
  purpose   String
  payerId   Int       // 支払い者のID
  payees    Payee[]
  cost      Int
  event     Event     @relation(fields: [eventId], references: [eventId])
}

model Payee {
  id        Int       @id @default(autoincrement())
  memberId  Int       // 受取人のメンバーID
  paymentId String
  payment   Payment   @relation(fields: [paymentId], references: [paymentId])
}

